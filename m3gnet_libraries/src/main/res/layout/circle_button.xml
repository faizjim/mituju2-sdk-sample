<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/circlebutton_background"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_circle2"/>

    <ImageView
        android:id="@+id/circlebutton_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:tint="@color/blueA100"
        android:src="@drawable/ic_videocam"/>

    <TextView
        android:id="@+id/circlebutton_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/circlebutton_background"
        android:layout_marginTop="15dp"
        android:textColor="@color/blueA100"
        android:textStyle="bold"
        android:text="label"/>

</RelativeLayout>